model Address {
  id             String       @id @default(uuid())
  index          String?
  city           String
  street         String
  building       String
  office         String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization?
}

model Map {
  id             String       @id @default(uuid())
  lat            String
  lng            String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization?
}

model WorkingDaysSchedule {
  id             String       @id @default(uuid())
  start          String
  end            String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization?
}

model WorkingTimeSchedule {
  id             String       @id @default(uuid())
  start          String
  end            String       @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization?
}

model Logo {
  id String @id @default(uuid())
  url String
  fileName String

  organization Organization?
}

model Organization {
  id                    String               @id @default(uuid())
  name                  String
  phone                 String?
  email                 String?
  telegram              String?
  viber                 String?
  whatsapp              String?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  
  logo                  Logo?                @relation(fields: [logoId], references: [id])
  logoId                String?               @unique

  address               Address?             @relation(fields: [addressId], references: [id])
  addressId             String?               @unique

  map                   Map?                 @relation(fields: [mapId], references: [id])
  mapId                 String?              @unique
  
  user                  User?

  workingDaysSchedule   WorkingDaysSchedule?  @relation(fields: [workingDaysScheduleId], references: [id])
  workingDaysScheduleId String?               @unique

  workingTimeSchedule   WorkingTimeSchedule?    @relation(fields: [workingTimeScheduleId], references: [id])
  workingTimeScheduleId String?             @unique
}
